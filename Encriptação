#include<stdio.h> 
#include<stdlib.h>
#include<string.h>


 
 char * encriptacao(char * s, char c){
int i; 
char *p,h; 	

for(i=0;s[i]!='\n';i++){
 h= s[i]; 
if(s[i] == 'A' || s[i] == 'E' || s[i] == 'I' || s[i] =='O' || s[i] =='U' ||
s[i] =='a' || s[i] =='e'|| s[i] =='i' || s[i] =='o' || s[i] =='u'){
	p[i] = c;
	
			}else{
			p[i] = h;
		} 
	}
return  p; 	
 }
 
 int main(){
char s[100],c;
char *p;	
 
 printf("Digite a string: ");
 fgets(s,100,stdin); 
 
 printf("Digite o caracter especial:");
 scanf("%c",&c);
 
 p =encriptacao(s,c);
 printf(" \n string original: %s \t\n ",s);	
 printf(" \n encriptacao: %s \t\n ",p);	
  	
 }
